{% extends 'base.html.twig' %}

{% block title %}
  Agregar
{% endblock %}

{% block body %}
  <div class="container p-4 rounded" style="background-color: #f0f8ff;"> {# Fondo claro tipo azul #}
    <div class="row mt-4 mb-3">
      <div class="col">
        <h1 class="text-success fw-bold">Agregar Estudiante</h1>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb bg-light p-2 rounded shadow-sm">
            <li class="breadcrumb-item">
              <a href="{{ path('crud_show') }}" class="text-decoration-none text-primary fw-semibold">
                <i class="bi bi-arrow-left-circle me-1"></i> Volver
              </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Agregar Registro</li>
          </ol>
        </nav>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body">
        {{ form_start(form, { attr: { 'data-turbo': 'false' } }) }}
        <div class="row">
          <div class="col-12 col-md-6">
            <div class="mb-3">{{ form_row(form.identidad) }}</div>
            <div class="mb-3">{{ form_row(form.nombre) }}</div>
            <div class="mb-3">{{ form_row(form.salon) }}</div>
          </div>
          <div class="col-12 col-md-6">
            <div class="mb-3">{{ form_row(form.acudiente) }}</div>
            <div class="mb-3">{{ form_row(form.edad) }}</div>
            <div class="mb-3">{{ form_row(form.genero) }}</div>
          </div>
          <div class="col-12 d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-success shadow-sm">
              <i class="bi bi-floppy-fill me-2"></i> Guardar
            </button>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
